<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center my-3">
  <h1>My Lists</h1>
  <%= link_to "New List", new_list_path, class: "custom-button" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
    <div class="col-4 my-3">
      <div class="category" style="background-image: url('<%= list.image %>');">
        <a class="category-name"><%= link_to list.name, list_path(list) %></a>
      </div>
    </div>
    <% end %>
  </div>

</div>
